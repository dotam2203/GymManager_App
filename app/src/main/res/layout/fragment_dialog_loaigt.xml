<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_margin="5dp"
    android:background="@drawable/shape_border_20">

    <TextView
        android:id="@+id/tvTieuDe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Loại Gói Tập"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/txtMaLoaiGT"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnThem"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="56dp"
        android:background="@drawable/shape_login_button"
        android:text="Thêm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnHuy"
        app:layout_constraintTop_toBottomOf="@+id/tvTrangThai" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnHuy"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="56dp"
        android:background="@drawable/shape_login_button"
        android:text="Hủy"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnThem"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTrangThai" />

    <TextView
        android:id="@+id/tvMaLoaiGT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mã Loại GT"
        android:textColor="@color/black"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTieuDe"
        app:layout_constraintEnd_toStartOf="@id/tvMaLoaiGT"
        app:layout_constraintBottom_toTopOf="@id/tvTenLoaiGT" />

    <EditText
        android:id="@+id/txtMaLoaiGT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="T01"
        app:layout_constraintBottom_toBottomOf="@+id/tvMaLoaiGT"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvMaLoaiGT"
        app:layout_constraintTop_toTopOf="@+id/tvMaLoaiGT" />

    <TextView
        android:id="@+id/tvTenLoaiGT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:text="Tên Loại GT"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMaLoaiGT"
        app:layout_constraintEnd_toStartOf="@id/tvTenLoaiGT"
        app:layout_constraintBottom_toTopOf="@id/tvTrangThai"/>

    <EditText
        android:id="@+id/txtTenLoaiGT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Tuần"
        app:layout_constraintBottom_toBottomOf="@+id/tvTenLoaiGT"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvTenLoaiGT"
        app:layout_constraintTop_toTopOf="@+id/tvTenLoaiGT" />

    <TextView
        android:id="@+id/tvTrangThai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:text="Trạng Thái"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTenLoaiGT"
        app:layout_constraintEnd_toStartOf="@id/tvTrangThai"
        app:layout_constraintBottom_toTopOf="@id/btnThem"/>

    <EditText
        android:id="@+id/txtTrangThai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Hoạt động"
        app:layout_constraintBottom_toBottomOf="@+id/tvTrangThai"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.53"
        app:layout_constraintStart_toEndOf="@+id/tvTrangThai"
        app:layout_constraintTop_toTopOf="@+id/tvTrangThai" />

</androidx.constraintlayout.widget.ConstraintLayout>