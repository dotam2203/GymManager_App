<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/llSlide"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@drawable/slide1">
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yoga"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="40sp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="50dp"/>
        <TextView
            android:id="@+id/tvTitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yoga mang đến một nguồn năng lượng cần khám phá để hoàn thiện về sức khỏe, ý chí, tinh thần và trí tuệ. Tâp luyện Yoga thường xuyên giúp giải các độc tố bên trong cơ thể, kích thích sự tuần hoàn máu, tăng hiệu quả của hệ tiêu hóa giúp phòng ngừa bệnh."
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/tvTitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yoga giúp bạn thư giãn và tĩnh lặng trong tâm hồn, tôn trọng và biết lắng nghe cơ thể của mình hơn, Yoga còn giúp bạn trở nên lạc quan và tự tin hơn, xóa tan mọi ảnh hưởng và tiêu cực trong suy nghĩ..."
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:textSize="20sp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
